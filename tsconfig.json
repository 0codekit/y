  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",

    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
